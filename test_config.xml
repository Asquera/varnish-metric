<?xml version="1.0"?>
<!DOCTYPE tsung SYSTEM "/usr/share/tsung/tsung-1.0.dtd">
<tsung loglevel="notice">
    <clients>
        <client host="localhost" maxusers="2000" use_controller_vm="true" />
    </clients>

    <servers>
        <server host="localhost" port="80" type="tcp"/>
    </servers>

<!--
    <monitoring>
        <monitor host="localhost" type="erlang"/>
    </monitoring>
-->

    <load duration="60" unit="second">
        <arrivalphase phase="1" duration="60" unit="second">
            <users maxnumber="2000" interarrival="0.04" unit="second"/>
        </arrivalphase>
    </load>

    <options>
        <option type="ts_http" name="user_agent">
            <user_agent probability="80">Mozilla/5.0 (X11; U; Linux i686; en-US; rv:1.7.8) Gecko/20050513 Galeon/1.3.21</user_agent>
            <user_agent probability="20">Mozilla/5.0 (Windows; U; Windows NT 5.2; fr-FR; rv:1.7.8) Gecko/20050511 Firefox/1.0.4</user_agent>
        </option>
    </options>

    <sessions>
        <session name="http-example" probability="100" type="ts_http">
            <request><http url="http://localhost:80" version="1.1" method="GET"/></request>
            <thinktime random="true" value="1"/>
            <request><http url="http://localhost:80/index.html" version="1.1" method="GET"/></request>
            <thinktime random="true" value="1"/>
            <request><http url="http://localhost:80/2012/06/23/first-post.html" version="1.1" method="GET"/></request>
            <thinktime random="true" value="1"/>
            <request><http url="http://localhost:80/test.png" version="1.1" method="GET"/></request>
            <thinktime random="true" value="1"/>
            <request><http url="http://localhost:80/image.jpg" version="1.1" method="GET"/></request>
        </session>
    </sessions>

</tsung>
